<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/open_camera_bg_share">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/openVideo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_corners_share"
                android:maxHeight="200dp"
                android:paddingStart="50dp"
                android:paddingTop="30dp"
                android:paddingEnd="50dp"
                android:paddingBottom="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_video_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="33dp"
                android:layout_marginBottom="40dp"
                android:text="Take a video"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:shadowRadius="5"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowColor="@android:color/holo_blue_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">

            <ImageButton
                android:id="@+id/openPhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_corners_share"
                android:maxHeight="200dp"
                android:paddingStart="50dp"
                android:paddingTop="40dp"
                android:paddingEnd="50dp"
                android:paddingBottom="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_camera"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="33dp"
                android:layout_marginBottom="40dp"
                android:text="Take a photo"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:shadowRadius="5"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowColor="@android:color/holo_blue_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</RelativeLayout>